<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pattern"
    tools:context="com.example.ziyomukhammad.cardview.AddNoteActivity">

    <TextView
        android:id="@+id/choose_picture_text_view"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="12dp"
        android:text="Choose Picture for Memo:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/take_picture_add_activity"
        android:layout_below="@+id/choose_picture_text_view"
        android:background="@drawable/photo_camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_below="@+id/take_picture_add_activity"
        android:id="@+id/note_title_et"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:hint="Tap here to give title"
        android:inputType="textAutoComplete"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/note_text_et"
        android:layout_below="@+id/take_picture_add_activity"
        android:layout_marginLeft="32dp"
        android:hint="Enter your note here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:minLines="3"
        android:layout_marginTop="32dp"
        />

    <EditText
        android:id="@+id/date_et"
        android:layout_marginTop="16dp"
        android:hint="date"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:clickable="true"
        android:editable="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_text_et"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save_note_button"
            android:text="save"
            android:background="@drawable/paper2"
            android:layout_width="100dp"
            android:layout_height="42dp"/>
        <Button
            android:layout_marginLeft="8dp"
            android:background="@drawable/paper2"
            android:id="@+id/cancel_note_button"
            android:text="close"
            android:layout_width="100dp"
            android:layout_height="42dp"/>
    </LinearLayout>
</RelativeLayout>
