<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ziyomukhammad.cardview.AddNoteActivity">

    <ImageView
        android:layout_marginTop="24dp"
        android:id="@+id/take_picture_add_activity"
        android:layout_centerHorizontal="true"
        android:background="@color/cardview_dark_background"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <EditText
        android:id="@+id/note_text_et"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:hint="Enter your note here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:minLines="3"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/take_picture_add_activity"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_marginTop="16dp"
        android:hint="date"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/note_text_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="close"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
